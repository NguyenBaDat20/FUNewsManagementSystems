@model IEnumerable<FUDTOs.SystemAccountDTO>

@{
    ViewData["Title"] = "Manage Accounts";
}

<h2>@ViewData["Title"]</h2>
<a class="btn btn-primary mb-3" asp-action="Create">Create New Account</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var account in Model)
        {
            <tr>
                <td>@account.AccountName</td>
                <td>@account.AccountEmail</td>
                <td>
                    @(account.AccountRole switch
                        {
                            1 => "Staff",
                            2 => "Lecture",
                            _ => "Unknown"
                        })
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@account.AccountId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@account.AccountId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>