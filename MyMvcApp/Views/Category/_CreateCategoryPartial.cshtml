@model FUDTOs.CategoryDTO

<div class="modal-header">
    <h5 class="modal-title" id="createCategoryModalLabel">Create New Category</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<form id="createCategoryForm" asp-action="Create" method="post" onsubmit="return false;">
    <div class="modal-body">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group mb-3">
            <label asp-for="CategoryName" class="control-label"></label>
            <input asp-for="CategoryName" class="form-control" />
            <span asp-validation-for="CategoryName" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="CategoryDesciption" class="control-label"></label>
            <textarea asp-for="CategoryDesciption" class="form-control" rows="3"></textarea>
            <span asp-validation-for="CategoryDesciption" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="ParentCategoryId" class="control-label"></label>
            <select asp-for="ParentCategoryId" class="form-control"
                    asp-items="ViewBag.ParentCategories">
                <option value="">-- Select Parent Category --</option>
            </select>
            <span asp-validation-for="ParentCategoryId" class="text-danger"></span>
        </div>

        <div class="form-group form-check mb-3">
            <input class="form-check-input" asp-for="IsActive" />
            <label class="form-check-label" asp-for="IsActive"></label>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-save"></i> Create
        </button>
    </div>
</form>

@* Script riêng cho validation trong modal (nếu form được tải động) *@
<script>
    // Đây là script để kích hoạt client-side validation cho form tải động
    // Nó cần chạy mỗi khi modal được tải lại
    $.validator.unobtrusive.parse('#createCategoryForm');
</script>